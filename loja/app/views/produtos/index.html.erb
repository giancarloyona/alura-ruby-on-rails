<html>
    <body>
        <table>
            <thead>
                <tr>
                    <th>Nome</th>
                    <th>Descricao</th>
                    <th>Preco</th>
                    <th>Quantidade</th>
                </tr>
            </thead>
            <tbody>
                <% todos = Produto.all %>
                <% todos.each do |produto| %>
               <tr>
                   <td><%= produto.nome %></td>
                   <td><%= produto.descricao %></td>
                   <td><%= produto.preco %></td>
                   <td><%= produto.quantidade %></td>
               </tr>
               <% end %>
            </tbody>
        </table>
    </body>

</html>